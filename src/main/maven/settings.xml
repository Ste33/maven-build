<?xml version="1.0" encoding="UTF-8"?>
<settings xmlns="http://maven.apache.org/SETTINGS/1.0.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/SETTINGS/1.0.0
                        http://maven.apache.org/xsd/settings-1.0.0.xsd">

    <interactiveMode/>
    <localRepository>${user.home}/.m2/repository</localRepository>

    <mirrors>
        <!-- Do not use variable substitution in mirrors when using an IDE, it does not works. -->
        <!-- mirrorOf: pom.xml repositories repository id -->
        <mirror>
            <id>mirror</id>
            <name>mirror</name>
            <url>http://nexus3.local:28081/nexus/repository/maven-public/</url>
            <mirrorOf>*</mirrorOf>
            <!--<mirrorOf>central</mirrorOf>-->
            <!--<mirrorOf>external:*,!github-chshawkn-wagon-maven-plugin</mirrorOf>-->
        </mirror>
    </mirrors>

    <offline/>

    <pluginGroups>
        <pluginGroup>org.apache.maven.plugins</pluginGroup>
        <pluginGroup>org.apache.tomcat.maven</pluginGroup>
        <pluginGroup>org.codehaus.mojo</pluginGroup>
        <pluginGroup>org.sonarsource.scanner.maven</pluginGroup>
    </pluginGroups>

    <proxies>
        <!--<proxy><id>http-proxy</id><active>true</active><protocol>http</protocol><host>127.0.0.1</host><port>8080</port><nonProxyHosts>127.0.0.1</nonProxyHosts></proxy>-->
        <!--<proxy><id>http-proxy</id><active>true</active><protocol>socks5</protocol><host>127.0.0.1</host><port>1080</port><nonProxyHosts>127.0.0.1</nonProxyHosts></proxy>-->
    </proxies>

    <servers>
        <!-- @formatter:off -->
        <server><id>gpg.passphrase</id><passphrase>${env.BUILD_OPT_GPG_PASSPHRASE}</passphrase></server>
        <server><id>github</id><password>${env.GITHUB_SITE_AUTH_TOKEN}</password></server>
        <server><id>OSSRH-releases</id><username>${env.MAVEN_CENTRAL_USER}</username><password>${env.MAVEN_CENTRAL_PASS}</password></server>
        <server><id>OSSRH-snapshots</id><username>${env.MAVEN_CENTRAL_USER}</username><password>${env.MAVEN_CENTRAL_PASS}</password></server>
        <server>
            <id>docker-hub</id>
            <username>${env.DOCKERHUB_USER}</username><password>${env.DOCKERHUB_PASS}</password>
            <configuration><email>${env.DOCKERHUB_MAIL}</email></configuration>
        </server>

        <server><id>internal-nexus3-releases</id><username>deployment</username><password>{W4hzroIAQKoHOtCYkQror16gbyrd9/KMO2v4QiyJYho=}</password></server>
